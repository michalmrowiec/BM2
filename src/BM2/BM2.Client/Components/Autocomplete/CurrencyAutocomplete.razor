@using BM2.Shared.DTOs
@inherits AutocompleteBase<CurrencyDTO>

@{
    base.BuildRenderTree(__builder);
}

@code {

    protected override void OnInitialized()
    {
        Uri = "api/v1/currencies";
        SearchFunc = (entity, value) =>
            entity.Name.Contains(value, StringComparison.InvariantCultureIgnoreCase)
            || entity.Symbol.Contains(value, StringComparison.InvariantCultureIgnoreCase)
            || entity.IsoCode.Contains(value, StringComparison.InvariantCultureIgnoreCase);
        OrderFunc = x => x.Name;
        base.OnInitialized();
    }

}